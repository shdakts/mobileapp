<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">

    <Button
        android:id="@+id/renkler"
        android:layout_width="143dp"
        android:layout_height="147dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/buton_tasarimi"
        android:onClick="yeni"
        android:text="Renkler"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/sayilar"
        android:layout_width="151dp"
        android:layout_height="147dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/renkler"
        android:layout_marginEnd="30dp"
        android:background="@drawable/buton_tasarimi"
        android:text="Sayılar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/konusma"
        android:layout_width="145dp"
        android:layout_height="139dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sayilar"
        android:layout_marginBottom="109dp"
        android:background="@drawable/buton_tasarimi"
        android:onClick="diyaloglar"
        android:text="Diyaloglar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/cumle"
        android:layout_width="145dp"
        android:layout_height="139dp"
        android:layout_alignStart="@+id/renkler"
        android:layout_alignTop="@+id/konusma"
        android:background="@drawable/buton_tasarimi"
        android:onClick="diyaloglar"
        android:text="Cümleler"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />

</RelativeLayout>


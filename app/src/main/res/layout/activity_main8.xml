<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#471616"
    tools:context=".Main8Activity">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Diyaloglar (2)"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:fontFamily="@font/galada" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/diyalog2" />

    <Button
        android:id="@+id/dinle"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="31dp"
        android:background="@android:drawable/ic_lock_silent_mode_off" />

    <Button
        android:id="@+id/kapat"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView18"
        android:layout_alignTop="@+id/dinle"
        android:layout_marginTop="0dp"
        android:background="@android:drawable/ic_lock_silent_mode" />
</RelativeLayout>